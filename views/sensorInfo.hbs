{{>header}}
<script src="/js/libs/Chart.min.js"></script>
<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="span3">
        <div class="content">
          <div class="module">
            <div class="module-body">
              <div class="media user">
                <div class="media-body">
                  <h3 class="media-title" id="sensor-name">
                    {{sensorInfo.name}}
                  </h3>
                  <h4 class="media-subtitle">
                    {{{findIcon sensorInfo.type}}}
                  </h4>
                  <p><small class="muted">{{sensorInfo.description}}</small></p>
                  <div class="pull-right">
                    {{#if sensorInfo.onConnect}}
                      <h1 class="font-blue showValue">{{sensorInfo.value}}</h1>
                    {{else}}
                      <i class="font-yellow icon-question-sign showValue"></i>
                    {{/if}}
                  </div>
                  {{#if sensorInfo.onConnect}}
                    <b class="ac-online">online</b>
                  {{else}}
                    <b class="ac-offline">offline</b>
                  {{/if}}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="span9">
        <div class="content">
          <div class="module">
            <div class="module-head">
              <h3>Chart</h3>
            </div>
            <div class="module-body">
              <div class="row-fluid">
                <div class="span2">
                  <div class="control-group">
                    <label class="control-label" for="basicinput">Day</label>
                    <div class="controls">
                      <select tabindex="1" data-placeholder="Select here.." class="span12" id="day">
                        <option value="0">today</option>
                        <option value="1">yesterday</option>
                      </select>
                    </div>
                  </div>
                </div>
                <div class="span2">
                  <div class="control-group">
                    <label class="control-label" for="basicinput">Time Interval</label>
                    <div class="controls">
                      <select tabindex="1" data-placeholder="Select here.." class="span12" id="interval">
                        <option value="">Select here..</option>
                        <option value="5m">5 minutes</option>
                        <option value="30m">30 minutes</option>
                        <option value="1h">1 hours</option>
                      </select>
                    </div>
                  </div>
                </div>
                <div class="span2">
                  <div class="control-group">
                    <label class="control-label" for="basicinput">Time Period</label>
                    <div class="controls">
                      <select tabindex="1" data-placeholder="Select here.." class="span12" id="period" disabled>
                        <option value="">...</option>

                      </select>
                    </div>
                  </div>
                </div>
                <div class="span2 pt-md-4">
                  <a href="#" class="btn btn-primary" id="query-btn">Query</a>
                </div>
              </div>
              <p id="subtitle"></p>
              <canvas id="myChart"></canvas>

              {{!-- <div class="" id="myChart">

                  </div> --}}
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

{{>footer}}

<script>
{{#if foundIt}}
  var results = {{{items}}};
{{else}}
  var results = undefined;
{{/if}}
const sensorID = "{{sensorID}}";
</script>
<script src="/js/libs/moment.min.js"></script>
<script src="/js/sensorInfo.js" type="text/javascript"></script>
